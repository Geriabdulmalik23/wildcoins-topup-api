{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": ""
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT}",
      "preDeployCommand": "php artisan key:generate",
      "postDeployCommand": "php artisan storage:link && php artisan filament:assets && php artisan config:cache && php artisan migrate --force",
      "sleepApplication": false,
      "multiRegionConfig": {
        "asia-southeast1-eqsg3a": {
          "numReplicas": 1
        }
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }